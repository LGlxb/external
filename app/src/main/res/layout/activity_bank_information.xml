<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".ui.activity.BankInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp">

            <ImageView
                android:id="@+id/bank_back"
                android:layout_width="12dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:background="@mipmap/icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Bank information"
                android:textColor="#ffffffff"
                android:textSize="19sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/ifsc_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/basic_relative"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="42dp"
            android:text="IFSC Code"
            android:textColor="#ff1e2f4b"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/code_edit"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_below="@id/full_name"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/shape_edit_basic"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/basic_relative"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:text="Bank Name"
            android:textColor="#ff1e2f4b"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/bank_edit"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_below="@id/full_name"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/shape_edit_basic"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/basic_relative"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="14dp"
            android:text="Bank Account No."
            android:textColor="#ff1e2f4b"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/account_edit"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_below="@id/full_name"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/shape_edit_basic"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="27dp"
        android:background="@mipmap/save_basic"
        android:gravity="center"
        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="22sp" />
</RelativeLayout>