<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context=".ui.activity.BasicInformationActivity">

    <EditText
        android:id="@+id/full_name_edit"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@id/full_name"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/shape_edit_basic"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_below="@id/email"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/shape_edit_basic"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <RelativeLayout
        android:id="@+id/basic_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="39dp">

        <ImageView
            android:id="@+id/basic_back"
            android:layout_width="12dp"
            android:layout_height="19dp"
            android:background="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Basic information"
            android:textColor="#ffffffff"
            android:textSize="19sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/birthday_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/birthday"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/birthday_image"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="54dp"
            android:background="@mipmap/next_basic" />

        <TextView
            android:id="@+id/birthday_text"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/shape_edit_basic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gender_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/gender_image"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="54dp"
            android:background="@mipmap/next_basic" />

        <TextView
            android:id="@+id/gender_text"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/shape_edit_basic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/marital_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/marital"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/marital_image"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="54dp"
            android:background="@mipmap/next_basic" />

        <TextView
            android:id="@+id/marital_text"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/shape_edit_basic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/education_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/education"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/education_image"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="54dp"
            android:background="@mipmap/next_basic" />

        <TextView
            android:id="@+id/education_text"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/shape_edit_basic" />
    </RelativeLayout>

    <TextView
        android:layout_width="108dp"
        android:layout_height="19dp"
        android:text="Full Name"
        android:textColor="#ff1e2f4b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/basic_relative"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="42dp"
        android:text="Full Name"
        android:textColor="#ff1e2f4b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_name_edit"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="Birthday"
        android:textColor="#ff1e2f4b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/birthday_relative"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="Gender"
        android:textColor="#ff1e2f4b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/marital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_relative"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="Marital"
        android:textColor="#ff1e2f4b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/marital_relative"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:text="Marital"
        android:textColor="#ff1e2f4b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/education_relative"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="13dp"
        android:text="E-mail"
        android:textColor="#ff1e2f4b"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_below="@id/email_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:background="@mipmap/save_basic"
        android:gravity="center"
        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="22sp" />

</RelativeLayout>