<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FeedbackActivity">

    <RelativeLayout
        android:id="@+id/feed_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feed_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:background="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Feedback"
            android:textColor="#041D98"
            android:textSize="19dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/feed_text"
        android:layout_width="315dp"
        android:layout_height="114dp"
        android:layout_below="@id/feed_relative"
        android:layout_marginStart="40dp"
        android:layout_marginTop="59dp"
        android:text="Any questions about the App, please contact us by E-mail.
        \n\nE-mail: service@xxCash.com"
        android:textColor="#ff6d83f2"
        android:textSize="19sp" />

    <RelativeLayout
        android:id="@+id/feed_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feed_text">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/paintbrush" />

        <EditText
            android:id="@+id/add_content"
            android:layout_width="335dp"
            android:layout_height="426dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/shape_edit"
            android:enabled="true"
            android:gravity="top"
            android:hint="Message to us"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="8"
            android:padding="20dp"
            android:scrollbars="vertical" />
    </RelativeLayout>

    <ImageView
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_below="@id/feed_edit"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="761dp"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@mipmap/icon_feedjx" />
</RelativeLayout>